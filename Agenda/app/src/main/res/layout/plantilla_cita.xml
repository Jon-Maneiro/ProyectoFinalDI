<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="379dp"
        android:layout_height="27dp"
        android:layout_marginTop="4dp"
        android:text="Nombre"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:text="Fecha"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

    <TextView
        android:id="@+id/tv_hora"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:text="Hora"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_gest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_fecha"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

    <TextView
        android:id="@+id/tv_personas"
        android:layout_width="205dp"
        android:layout_height="90dp"
        android:layout_marginTop="1dp"
        android:text="Personas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="176dp"
        android:layout_height="21dp"
        android:text="Id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/tv_personas"
        app:layout_constraintTop_toBottomOf="@+id/btn_gest"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_gest"
        android:layout_width="179dp"
        android:layout_height="70dp"
        android:layout_marginTop="2dp"
        android:text="Gestionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/tv_personas"
        app:layout_constraintTop_toBottomOf="@+id/tv_fecha"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>